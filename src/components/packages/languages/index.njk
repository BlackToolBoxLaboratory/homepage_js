<div class="page_container">
  <div class="page_head">
    <h1 class="page_title">{{lang.route.languages}}</h1>
    <a class="head_linkBtn linkBtn-github" href="https://github.com/BlackToolBoxLaboratory/prototype-languages"
      target="_blank">
      <i class="fab fa-github fa-fw"></i>
    </a>
    <a class="head_linkBtn linkBtn-npm" href="https://www.npmjs.com/package/@blacktoolbox/prototype-languages"
      target="_blank">
      <i class="fab fa-npm fa-fw"></i>
    </a>
  </div>
  <section class="page_section">
    <div class="section_title">
      <div class="page_version">
        <span>{{lang.package.version_colon}}</span>
        <span>1.1.1</span>
      </div>
      <div class="page_releaseDate">
        <span>{{lang.package.release_colon}}</span>
        <span>2020-01-20</span>
      </div>
    </div>
    <div class="section_block">
      {{lang.package.languages.description}}
    </div>
  </section>
  <section class="page_section">
    <div class="section_title">{{lang.package.section.title.installation}}</div>
    <div class="section_block">
      <pre class="page_pre">
$ npm install --save @blacktoolbox/prototype-languages

<code class="pre_notice">// ES6 modules</code>
import Language, { initializer } from '@blacktoolbox/prototype-languages';

<code class="pre_notice">// CommonJS modules</code>
var Language = require('@blacktoolbox/prototype-languages');
var initializer = require('@blacktoolbox/prototype-languages').initializer;

<code class="pre_notice">// in HTML directly</code>
&lt;script type="text/javascript" src="./libs/prototype-languages/index.min.js"&gt;&lt;/script&gt;
<code class="pre_typeof">Class</code> globalThis['btblab-languages'].default;
<code class="pre_typeof">Function</code> globalThis['btblab-languages'].initializer;
</pre>
    </div>
  </section>
  <section class="page_section">
    <div class="section_title">{{lang.package.section.title.application}}</div>
    <div class="section_block">
      <div class="block_title">{{lang.package.languages.block.initializer.title}}</div>
      <div class="block_description">
        {{lang.package.languages.block.initializer.description.initial}}
      </div>
      <pre class="page_pre">
initializer([
  { index: 'en_US', label: 'US', dictionary: {'text': 'test %1, test%2, test %1'} },
  { index: 'zh_TW', label: 'Taiwan', dictionary: {'text': '測試 %1, 測試%2, 測試 %1'} }
])
</pre>
      <div class="block_description">
        {{lang.package.languages.block.initializer.description.nest}}
      </div>
      <pre class="page_pre">
dictionary: {
  'a':{
    'aa': {
      'aaa': 'AAA',
      'aab': 'AAB'
    }
  },
  'b': {
    'ba': 'BA'
  }
}
</pre>
      <div class="block_description">
        {{lang.package.languages.block.initializer.description.result}}
      </div>
    </div>
    <div class="section_block">
      <div class="block_title">
        {{lang.package.languages.block.methods.title}}
      </div>
      <div class="block_description">
        {{lang.package.languages.block.methods.description.configuration}}
      </div>
      <pre class="page_pre">
<code class="pre_notice">// using as module</code>
const languages = new Language();

<code class="pre_notice">// using in HTML directly</code>
const languages = new globalThis['btblab-languages'].default();
</pre>
      <div class="block_description">
        {{lang.package.languages.block.methods.description.introduction}}
      </div>
      <div class="block_entry">
        <div class="entry_title">- menu();</div>
        <div class="entry_content">
          {{lang.package.languages.block.methods.menu}}
        </div>
      </div>
      <div class="block_entry">
        <div class="entry_title">- get(); </div>
        <div class="entry_content">
          {{lang.package.languages.block.methods.get}}
        </div>
      </div>
      <div class="block_entry">
        <div class="entry_title">- set(languageIndex);</div>
        <div class="entry_content">
          {{lang.package.languages.block.methods.set}}
        </div>
      </div>
      <div class="block_entry">
        <div class="entry_title">- translate(stringIndex, repacement);</div>
        <div class="entry_content">
          {{lang.package.languages.block.methods.translate}}
        </div>
        <pre class="page_pre">
<code class="pre_notice">// For example: text is the index of 'test %1, test%2, test %1';</code>
languages.translate('text');
>> test %1, test%2, test %1

languages.translate('text', {'%1': 'abc', '%2': 'xyz'});
>> test abc, testxyz, test abc
</pre>
      </div>
    </div>
  </section>
</div>